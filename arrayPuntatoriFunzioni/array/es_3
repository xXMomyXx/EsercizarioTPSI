#include <stdio.h>

int main(int argc, char *argv[]){
    int l = 10;
    int arr [l];
    printf("Inserire 10 numeri\n");
    for(int i = 0; i < l; i++){
        scanf("%d", &arr[i]);
    }
    printf("Numeri pari:\n");
    for(int i = 0; i < l; i++){
        if(arr[i] % 2 == 0){
            printf("%d\n", arr[i]);
        }
    }
    printf("Numeri dispari:\n");
    for(int i = 0; i < l; i++){
        if(arr[i] % 2 != 0){
            printf("%d\n", arr[i]);
        }
    }
    return 0;
}

#include <stdio.h>
#define DIM 1000

int main(int argc, char *argv[]) {
    int arr[DIM];
    int counter = 0, sum = 0;
    double media;
    for(int i = 0; i < DIM; i++){
        printf("Inserire il %dÂ° numero", i+1);
        scanf("%d", &arr[i]);
        if(arr[i] == 0){
            i = 1000;
        } else {
            counter++;
            sum+=arr[i];
        }
    }
    media = sum / counter;
    printf("La media dei valori inseriti e': %f.2", media);
    for(int i = counter - 1; i >= 0; i--){
        if(arr[i] > media){
            printf("%d \n",arr[i]);
        }
    }
    return 0;
}
